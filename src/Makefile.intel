# NOTE: setup for monkey.theochem.kth.se

# C++ compiler & linker

CXX := icpx

# Compiler flags for generic intel CPUs

CXX_REL_FLG := -std=c++17 -O3 -qopenmp -xHost -Wall -qopt-report=3   
CXX_DEB_FLG := -std=c++17 -O3 -qopenmp -xHost -Wall -qopt-report=3 -g 

# Generic preprocessor flags

CPP_REL_FLG := -DVLX_ALIGN=64
CPP_DEB_FLG := -DVLX_ALIGN=64 -DVAR_DEBUG=1

# disable dynamic lookup

LIB_LIST = 

# Python interface

PYTHON := python

PYTHON_INC := $(shell $(PYTHON)-config --includes)
PYTHON_INC += -I$(shell $(PYTHON) -c "import numpy; print(numpy.get_include())")
PYTHON_INC += $(shell $(PYTHON) -m pybind11 --includes)

PYTHON_LD  := $(shell $(PYTHON)-config --ldflags)

CXX_REL_FLG += -fPIC $(PYTHON_INC)
CXX_DEB_FLG += -fPIC $(PYTHON_INC)

# OpenMP interface

#OPENMP_INC := -I /usr/local/Cellar/libomp/15.0.6/include 

#OPENMP_LD  := -L /usr/local/Cellar/libomp/15.0.6/lib/ -lomp

#CXX_REL_FLG += $(OPENMP_INC)
#CXX_DEB_FLG += $(OPENMP_INC)

# Native shell commands

CP := cp -f
MV := mv -f
RM := rm -f

# Native libraries generation tools

AR      := ar
ARFLAGS := rc
